#!/usr/bin/env bash

VERSION=$1

printf "module Tailwindcss\n  VERSION = \"$VERSION\"\nend\n" > ./lib/tailwindcss/version.rb
bundle
git add Gemfile.lock lib/tailwindcss/version.rb
git commit -m "Bump version for $VERSION"
git push
git tag -s v$VERSION
bundle exec rake release
git push --tags
rm -Rf pkg
